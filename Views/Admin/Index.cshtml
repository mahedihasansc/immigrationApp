
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<div class="row">
    <div class="col-md-4">
        <div class="row">
            <div class="col-md-6 col-lg-6 col-xlg-3">
                <div class="card card-hover">
                    <div class="box bg-cyan text-center">
                        <h1 class="font-light text-white"><i class="fas fa-users"></i></h1>
                        <h6 class="text-white">Total Guests: @ViewBag.totalGuests</h6>
                    </div>
                </div>
            </div>
            <!-- Column -->
            <div class="col-md-6 col-lg-6 col-xlg-3">
                <div class="card card-hover">
                    <div class="box bg-success text-center">
                        <h1 class="font-light text-white"><i class="fas fa-user-secret"></i></h1>
                        <h6 class="text-white">Today's Guests: @ViewBag.todaysGuests</h6>
                    </div>
                </div>
            </div>
            <!-- Column -->
            <div class="col-md-6 col-lg-6 col-xlg-3">
                <div class="card card-hover">
                    <div class="box bg-warning text-center">
                        <h1 class="font-light text-white"><i class="far fa-building"></i></h1>
                        <h6 class="text-white">Total Hotels: @ViewBag.totalHotels</h6>
                    </div>
                </div>
            </div>
            <!-- Column -->
            <div class="col-md-6 col-lg-6 col-xlg-3">
                <div class="card card-hover">
                    <div class="box bg-danger text-center">
                        <h1 class="font-light text-white"><i class="far fa-calendar-alt"></i></h1>
                        <h6 class="text-white">Today Add Hotels: @ViewBag.todaysHotels</h6>
                    </div>
                </div>
            </div>
            <!-- Column -->
            <div class="col-md-6 col-lg-6 col-xlg-3">
                <div class="card card-hover">
                    <div class="box bg-info text-center">
                        <h1 class="font-light text-white"><i class="fas fa-user"></i></h1>
                        <h6 class="text-white">Total Users: @ViewBag.totalUsers</h6>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xlg-3">
                <div class="card card-hover">
                    <div class="box bg-cyan text-center">
                        <h1 class="font-light text-white"><i class="fas fa-user-plus"></i></h1>
                        <h6 class="text-white">Today Add Users: @ViewBag.todaysUsers</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-12 col-lg-12 col-xlg-3">
                <div class="card card-hover">
                    <div class="box bg-cyan text-center">
                        <h1 class="font-light text-white"><i class="far fa-building"></i></h1>
                        <h6 class="text-white">Those hotel's Who don't sent data today.</h6>
                        <table id="tbl_config" class="table table-hover table-striped" style="background-color:white; font-weight:bold;">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Hotel Name</th>
                                    <th>Region</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var h in ViewBag.notSend)
                                {
                                    <tr>
                                        <td>@h.No</td>
                                        <td>@h.hotelName</td>
                                        <td>@h.regionName</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#tbl_config').DataTable({
            "bFilter": false,
            "lengthChange": false
        });
    });
</script>



