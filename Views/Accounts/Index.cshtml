<script>
    $(document).ready(function () {
        $('#tbl_config').DataTable({
            "bFilter": false,
            "lengthChange": false,
            dom: 'Bfrtip',
            buttons: [
                {
                    extend: 'print',
                    text: '<span class="fas fa-print"> Print</span>',
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4, 5]
                    },
                    className: 'btn btn-success'
                }
            ]
        });
        $('#tbl2_config').DataTable({
            "bFilter": false,
            "lengthChange": false
        });
    });
    function StatusChange(id,stat) {
        swal({
            title: "Are you sure to change?",
            text: "User info will be changed..!!!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        }).then((willDelete) => {
            if (willDelete) {
                var Id = id;
                var val = stat;
                $.ajax({
                    type: "POST",
                    url: "/Accounts/ChangeStatus?id=" + Id,
                    success: function () {
                        if (val == 1) {
                            swal({
                                icon: "success",
                                title: "successfully disabled"
                            })
                            .then((confirm) => {
                                if (confirm == true) {
                                    location.reload();
                                }
                            });
                        } else {
                            swal({
                                icon: "success",
                                title: "successfully enabled"

                            })
                            .then((confirm) => {
                                if (confirm == true) {
                                    location.reload();
                                }
                            });
                        }
                    }
                });
            } else {
                swal("Your data is safe!");
            }
        });
    };
</script>